









<!DOCTYPE HTML>
<html>
	<head>
		<title>Logcon</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="shortcut icon" href="images/logo/logcon-logo-24.png">
		<link rel="stylesheet" href="css/main.css" />


	</head>
	<body class="no-sidebar is-preload">
		<div id="page-wrapper">

			<!-- Header -->
			<section id="header" class="wrapper">

                <!-- Logo -->
                    <div id="logo">
                        <h1><a href="#">Ranking</a></h1>
                        <p>2020 Logcon</p>
                        <% if (user_school != "undefined") { %>
                            <p>환영합니다 <%= user_id %>님<br>		<!-- Login상태참고해서 출력-->
                                <span>Score : <%= score %></span>
                            </p>
                        <% } %>

                    </div>

                <!-- Nav -->
                    <nav id="nav">
                        <ul>
                            <li class="current"><a href="/">Dash Board</a></li>
                            <li>
                                <a href="/rank">Ranking</a>
                                <ul>
                                    <li><a href="/rank?school=middle">중학생 순위</a></li>
                                    <li><a href="/rank?school=high">고등학생 순위</a></li>
                                    <li><a href="/rank">전체순위</a></li>
                                </ul>
                            </li>
                            <li><a href="/notice">Notice</a></li>
                            <li><a href="/challenges">문제</a></li>
                            <% if (user_school == "undefined") { %>
                                <li class="userAuth">
                                    <a href="#" class="unLogin" onClick="popUpAuthForm(true)">
                                        로그인/회원가입
                                    </a>
                                </li>
                            <% } else { %>
                                <li><a href="/mypage">내 정보</a></li>
                                <li><a href="/logout" class="logined">로그아웃 </a></li>
                            <% } %>


                        </ul>
                    </nav>

            </section>
				<section id="highlights" class="wrapper style3">
					<div class="title">Ranking</div>
					<div class="container">


							<% users.sort((a, b) => {return b.SCORE - a.SCORE}) %>
                            <% let count = 1; %>

                            <% for (let i = 0; i < users.length; i++) { %>

                                <% var comment ="" ;%>

                                <div class="rank-List col-12-medium" style="margin-top: 2%;margin-bottom: 5%;">
                                    <section class="highlight">
                                        <!-- <a href="#" class="image featured"><img src="images/pic03.jpg" alt="" /></a> -->
                                        <div>
                                            <h3><%= count++ %></h3>
                                            <h3><%= users[i].ID %></h3>
                                        </div>
                                        <% if(users[i].PROFILE_COMMENT !=undefined){ comment = users[i].PROFILE_COMMENT  } %>

                                        <div>
                                            <span class="points"><span> Score :  </span> <span> &nbsp;<%= users[i].SCORE %> Pts</span> </span>
                                            <br />
                                            <span class="comments"> <span> Comments : </span><span><%= comment %></span> </span>
                                            <br />
                                            <span class="school"> <span> School : </span>  <span> <%= users[i].SCHOOL %> </span>  </span>
                                        </div>

                                    </section>
                                </div>
                            <% } %>





                            
						</div>
					</div>
				</section>

				<% include ./layout/modal %>

		<!-- Scripts -->
			<script src="js/jquery.min.js"></script>
			<script src="js/jquery.dropotron.min.js"></script>
			<script src="js/browser.min.js"></script>
			<script src="js/breakpoints.min.js"></script>
			<script src="js/util.js"></script>
			<script src="js/main.js"></script>
			<script src="js/main_modal.js"></script>
			<script>
				 for(var i=2;i<=$(".container .rank-List").length;i+=2){
				 	$(".container .rank-List:nth-child("+i+")").css({'background':'rgba(1,1,1,0.1)'})
				}
			</script>
	</body>
</html>